<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    android:padding="30sp">

    <TextView
        android:id="@+id/tv_Register"
        android:text="InterviewCoach"
        android:gravity="center"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="100sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
        android:id="@+id/tv_h2"
        android:text="Register new account"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/tv_Register"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeMaxTextSize="60sp"/>
    <android.widget.EditText
        android:id="@+id/ev_name"
        android:layout_below="@+id/tv_h2"
        android:hint="Full name:"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10sp"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.widget.EditText
        android:id="@+id/ev_email"
        android:padding="12dp"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10sp"
        android:textSize="14sp"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_name"/>
    <android.widget.EditText
        android:id="@+id/ev_pass1"
        android:padding="12dp"
        android:hint="Password:"
        android:ems="10"
        android:drawableStart="@drawable/ic_lock_black"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10sp"
        android:textSize="14sp"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_email"/>
    <android.widget.EditText
        android:id="@+id/ev_pass2"
        android:padding="12dp"
        android:hint="Password again:"
        android:ems="10"
        android:drawableStart="@drawable/ic_lock_black"
        android:drawablePadding="10dp"
        android:textSize="14sp"
        android:background="@drawable/custom_input"
        android:layout_marginBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_pass1"/>
    <android.widget.Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_pass2"
        android:padding="12dp"
        android:text="register"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button"
        android:onClick="register"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:onClick="alreadyRegistered"
        android:text="Already registered?\n\ Login here"/>

    <ProgressBar
        android:id="@+id/pb_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"/>

</LinearLayout>