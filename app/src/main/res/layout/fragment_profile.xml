<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@color/colorWhite"
    android:clickable="true" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@android:color/black"
        android:layout_height="130dp"
        android:layout_width="130dp"
        app:strokeWidth="1dp"
        app:srcCompat="@drawable/ic_person"
        android:layout_marginBottom="15sp">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/profileNameTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ada Lovelace"
        android:gravity="center"
        android:layout_marginBottom="25sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="25sp"/>
    <LinearLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_layout"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@android:color/black"
            android:gravity="start"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ada Lovelace"
            android:layout_marginLeft="25sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginBottom="25sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@android:color/black"
            android:gravity="start"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@live.se"
            android:layout_marginLeft="25sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


    </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp">

    <android.widget.Button
        android:layout_marginTop="30sp"
        android:id="@+id/profile_logout"
        android:layout_width="120sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_profilebutton"
        android:onClick="logout"
        android:layout_gravity="start"
        android:layout_marginRight="10sp"
        android:text="Logout"/>
    <android.widget.Button
        android:layout_marginTop="10sp"
        android:id="@+id/profile_change"
        android:layout_width="125sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_profilebutton"
        android:layout_gravity="end"
        android:text="change profile"/>
    </LinearLayout>
    <android.widget.Button
        android:layout_marginTop="10sp"
        android:id="@+id/btn_showVideos"
        android:layout_width="125sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_profilebutton"
        android:layout_gravity="center"
        android:text="Show my videos"/>

</LinearLayout>